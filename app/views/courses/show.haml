- content_for(:navigation) do
	%ol.breadcrumb
		%li
			%a{href:'/'}= t('top')
		%li
			%a{href:"/courses"}= t('course')
		%li
			= "#{@course.name}#{t("model.course.type.#{@course.type}")}"
%h2= "#{@course.name}#{t("model.course.type.#{@course.type}")}"
%a{href:"/courses/#{@course.id}/edit"}= t('edit')
%p= @course.description
%div.row
	%div.col-md-6
		%h3 教官
		%ul
		- @course.teachers.each do |teacher|
			%li
				%a{href:"/teachers/#{teacher.id}"}= teacher.account.screen_name
	%div.col-md-6
		%h3 学生
		%ul
		- @course.students.each do |student|
			%li
				%a{href:"/students/#{student.id}"}= student.account.screen_name
