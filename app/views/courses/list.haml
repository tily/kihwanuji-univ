- content_for(:navigation) do
	%ol.breadcrumb
		%li
			%a{href:'/'}= t('top')
		%li
			= t('course')
%h2 学部・大学院
- if current_account
	%a{href:'/courses/new'} 作成
%div.row
	- Course::TYPE.each do |type|
		%div.col-md-6
			%h3= t("model.course.type.#{type}")
			%ul
				- Course.where(type: type).each do |course|
					%li
						%a{href:"/courses/#{course.id}"}= "#{course.name}#{t("model.course.type.#{type}")}"
