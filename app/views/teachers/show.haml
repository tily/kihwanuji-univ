- content_for(:navigation) do
	%ol.breadcrumb
		%li
			%a{href:'/'}= t('top')
		%li
			%a{href:'/teachers'}= t('teacher')
		%li
			= @teacher.account.screen_name
%h2= @teacher.account.screen_name
- if @teacher.course
	%p
		= @teacher.course.name
		= t("model.course.type.#{@teacher.course.type}")
		= t("model.teacher.type.#{@teacher.type}")
%div.row
	%div.col-md-6
		%h3= t('teaching_lectures')
		%ul
		- @teacher.lectures.each do |lecture|
			%li= list_item(:lecture, lecture)
		%a{href:"/teachers/#{@teacher.id}/timetable"}= t('timetable')
	%div.col-md-6
		%h3= t('paper')
		%ul
		- @teacher.papers.each do |paper|
			%li= list_item(:paper, paper)
