- content_for(:navigation) do
	%ol.breadcrumb
		%li
			%a{href:'/'}= t('top')
		%li
			%a{href:'/students'}= t('student')
		%li
			= @student.account.screen_name
%h2= @student.account.screen_name
- if @student.course
	%p
		= @student.course.name
		= t("model.course.type.#{@student.course.type}")
		= t("model.student.type.#{@student.type}")
%div.row
	%div.col-md-6
		%h3= t('participating_lectures')
		%ul
		- @student.lectures.each do |lecture|
			%li
				%a{href:"/lectures/#{lecture.id}"}= lecture.title
		%a{href:"/students/#{@student.id}/timetable"}= t('timetable')
	%div.col-md-6
		%h3= t('paper')
		%ul
		- @student.papers.each do |paper|
			%li
				%a{href:"/papers/#{paper.id}"}= paper.title
